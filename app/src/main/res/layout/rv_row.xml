<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/rv_row_productImage"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="id"
        android:layout_toRightOf="@+id/rv_row_productImage"
        android:layout_margin="10dp"
        android:id="@+id/row_productId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Name"
        android:layout_toRightOf="@+id/rv_row_productImage"
        android:layout_margin="10dp"
        android:layout_below="@+id/row_productId"
        android:id="@+id/row_productName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Price"
        android:layout_below="@+id/row_productName"
        android:layout_toRightOf="@+id/rv_row_productImage"
        android:layout_margin="10dp"
        android:id="@+id/row_productPrice"/>
</RelativeLayout>